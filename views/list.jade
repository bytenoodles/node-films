extends layout
block stylesheet

block content
    .content
        header.page-header
            h1 Title text
                small.subtitle Subtitle text
        article.row
            .span14
                h2 #{entity.modelName} list
                
                    table.zebra-striped
                        thead
                            tr
                                -for(var prop in entity.schema.paths)
                                    -if (!(/^_/).test(prop))
                                        td #{prop}
                        tbody(id="table-body")
                        
                        
                        tr.newtr
                            -for(var prop in entity.schema.paths)
                                -if (!(/^_/).test(prop))
                                    td
                                        input(type='text', id='#{prop}', class="new")
                            td
                                a(href='javascript:accion(\"I\",null)') Add
block script
    script(src="/js/list.js")

        