extends layout
block stylesheet

block content
    .content
        header.page-header
            h1 Title text
                small.subtitle Subtitle text
        article.row
            .span14
                h2 #{model.modelName} list
                
                    table.zebra-striped
                        thead
                            tr
                                -for(var prop in model.schema.paths)
                                    -if (!(/^_/).test(prop))
                                        td #{prop}
                        tbody(id="table-body")
                        
                        
                        tr.newtr
                            -for(var prop in model.schema.paths)
                                -if (!(/^_/).test(prop))
                                    td
                                        -if (model.schema.paths[prop].instance != "ObjectID")
                                            input(type='text', id='#{prop}', class="new")
                                        -else
                                            .div Object
                            td
                                a(href='javascript:accion(\"I\",null)') Add
